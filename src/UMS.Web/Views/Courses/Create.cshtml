@model UMS.Web.ViewModels.Courses.CreateCourseInputForm
@{ 
    this.ViewData["Title"] = "Add new course";
    var majorItems = this.Model.MajorItems.Select(kvp => new SelectListItem(kvp.Value, kvp.Key));
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" placeholder="2" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start date of the course</label>
        <input asp-for="StartDate" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End date of the course</label>
        <input asp-for="EndDate" type="date" asp-format="{0:dd-MM-yyyy}" placeholder="Enter datetime" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MajorId">Major</label>
        <select asp-for="MajorId" class="form-control" asp-items="majorItems"></select>
        <span asp-validation-for="MajorId" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>
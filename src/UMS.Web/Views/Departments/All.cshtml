@model UMS.Web.ViewModels.Departments.DepartmentGetAllViewModel
@{
    this.ViewData["Title"] = "All Departments, page " + Model.PageNumber;
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>}

<h1>@this.ViewData["Title"]</h1>

<div class="row">
    @foreach (var department in this.Model.Departments)
    {
        @department.Id @:&nbsp;
        @department.Name @:&nbsp;
        @department.BelongsToFaculty
        <br />
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />
@using UMS.Data.Common.Enumerations
@model UMS.Web.ViewModels.Resources.EditResourceInputForm

@{
    ViewData["Title"] = "Edit Resource";
}

<h1 style="text-align:center">@ViewData["TItle"]</h1>

<hr />

<form method="post" id="editForm" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResourceType"></label>
        <select asp-for="ResourceType" class="form-control" asp-items="@Html.GetEnumSelectList<HomeworkType>()"></select>
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="All" class="btn btn-info">Back to all resources</a>
    </div>
</form>

<div style="text-align:center">
    <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalEdit">Save changes</button>
</div>

<partial name="_EditConfirmChangesPartial" />

@using UMS.Data.Common.Enumerations

@model UMS.Web.ViewModels.Resources.CreateResourceInputForm
@{
    this.ViewData["Title"] = "Add new resource";
}

<h1 style="text-align:center">@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResourceType"></label>
        <select asp-for="ResourceType" class="form-control" asp-items="@Html.GetEnumSelectList<HomeworkType>()"></select>
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">Start date of the course</label>
        <input asp-for="Url" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-success" />
        <a asp-action="All" class="btn btn-info">Back to all resources</a>
    </div>
</form>

@using UMS.Data.Common.Enumerations

@model UMS.Web.ViewModels.Homeworks.EditHomeworkInputForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HomeworkEditParametersModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeworkType"></label>
                <select asp-for="HomeworkType" class="form-control" asp-items="@Html.GetEnumSelectList<HomeworkType>()"></select>
                <span asp-validation-for="HomeworkType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentTime">Start date of the course</label>
                <input asp-for="AssignmentTime" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control" />
                <span asp-validation-for="AssignmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenForSubmissionTime">End date of the course</label>
                <input asp-for="OpenForSubmissionTime" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control" />
                <span asp-validation-for="OpenForSubmissionTime" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalEdit">Save changes</button>

<!-- Modal -->
<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you confirm this changes?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>

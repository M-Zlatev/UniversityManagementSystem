@using UMS.Data.Common.Enumerations

@model UMS.Web.ViewModels.Faculties.CreateFacultyInputForm
@{
    this.ViewData["Title"] = "Add new faculty";
}

<h1 style="text-align:center">@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressStreetName"></label>
        <input asp-for="AddressStreetName" class="form-control" />
        <span asp-validation-for="AddressStreetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressDistrictName"></label>
        <input asp-for="AddressDistrictName" class="form-control" />
        <span asp-validation-for="AddressDistrictName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressTownName"></label>
        <input asp-for="AddressTownName" class="form-control" />
        <span asp-validation-for="AddressTownName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressPostalCode"></label>
        <input asp-for="AddressPostalCode" class="form-control" />
        <span asp-validation-for="AddressPostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressCountryName"></label>
        <input asp-for="AddressCountryName" class="form-control" />
        <span asp-validation-for="AddressCountryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressContinentName"></label>
        <select asp-for="AddressContinentName" class="form-control" asp-items="@Html.GetEnumSelectList<Continent>()"></select>
        <span asp-validation-for="AddressContinentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fax"></label>
        <input asp-for="Fax" class="form-control" />
        <span asp-validation-for="Fax" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-success" />
        <a asp-action="All" class="btn btn-info">Back to all faculties</a>
    </div>
</form>

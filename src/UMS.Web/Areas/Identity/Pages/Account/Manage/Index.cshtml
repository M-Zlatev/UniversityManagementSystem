@page
@using UMS.Data.Common.Enumerations
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label> &nbsp;
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                    &emsp; &emsp; &nbsp;

                    <label asp-for="Input.MiddleName"></label> &nbsp;
                    <input asp-for="Input.MiddleName" class="form-control" />
                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>

                    &emsp; &emsp;

                    <label asp-for="Input.LastName"></label> &nbsp;
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <br>

            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Input.Birthdate"></label> &nbsp;
                    <input asp-for="Input.Birthdate" type="date" class="form-control" />
                    <span asp-validation-for="Input.Birthdate" class="text-danger"></span>

                    &emsp; &emsp; &nbsp;

                    <label asp-for="Input.Gender"></label> &nbsp;
                    <select asp-for="Input.Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>

                    &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp;

                    <label asp-for="Input.PhoneNumber"></label> &nbsp;
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <br>

            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Input.Address.StreetName">Street name</label> &nbsp;
                    <input asp-for="Input.Address.StreetName" class="form-control" />
                    <span asp-validation-for="Input.Address.StreetName" class="text-danger"></span>

                    &emsp; &emsp;

                    <label asp-for="Input.Address.District"></label> &nbsp;
                    <input asp-for="Input.Address.District" class="form-control" />
                    <span asp-validation-for="Input.Address.District" class="text-danger"></span>

                    &emsp; &emsp; &emsp; &emsp;

                    <label asp-for="Input.Address.Town"></label> &nbsp;
                    <input asp-for="Input.Address.Town" class="form-control" />
                    <span asp-validation-for="Input.Address.Town" class="text-danger"></span>
                </div>
            </div>

            <br>

            <div class="form-inline">
                <div class="form-group">
                    <label asp-for="Input.Address.PostalCode">Postal code</label> &nbsp;
                    <input asp-for="Input.Address.PostalCode" class="form-control" />
                    <span asp-validation-for="Input.Address.PostalCode" class="text-danger"></span>

                    &emsp; &emsp;

                    <label asp-for="Input.Address.Country"></label> &nbsp;
                    <input asp-for="Input.Address.Country" class="form-control" />
                    <span asp-validation-for="Input.Address.Country" class="text-danger"></span>

                    &emsp; &emsp; &emsp; &emsp;

                    <label asp-for="Input.Address.Continent"></label> &nbsp;
                    <select asp-for="Input.Address.Continent" class="form-control" asp-items="@Html.GetEnumSelectList<Continent>()"></select>
                    <span asp-validation-for="Input.Address.Continent" class="text-danger"></span>
                </div>
            </div>

            <br />

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}